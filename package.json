{
  "name": "winccoa-logviewer",
  "displayName": "WinCC OA LogViewer",
  "description": "LogViewer for WinCC OA - View and analyze log files in real-time",
  "version": "0.0.1",
  "publisher": "winccoa-tools",
  "license": "SEE LICENSE IN LICENSE",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/winccoa_vscode_tools"
  },
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:winccoa-logviewer.open"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "winccoa-logviewer.open",
        "title": "Open WinCC OA LogViewer",
        "category": "WinCC OA"
      }
    ],
    "configuration": {
      "title": "WinCC OA LogViewer",
      "properties": {
        "winccoaLogviewer.logLevel": {
          "type": "string",
          "enum": ["debug", "info", "warn", "error"],
          "default": "info",
          "description": "Log level for the extension output channel (debug shows all internal operations)"
        },
        "winccoaLogviewer.logPathSource": {
          "type": "string",
          "enum": ["static", "workspace", "npm-package"],
          "default": "workspace",
          "enumDescriptions": [
            "Use a static path configured in settings",
            "Derive path from workspace root (workspace/log)",
            "Get path from WinCC OA project info npm package (when available)"
          ],
          "description": "How to determine the log directory path"
        },
        "winccoaLogviewer.staticLogPath": {
          "type": "string",
          "default": "",
          "description": "Static log directory path (used when logPathSource is 'static'). Example: C:\\wincc_proj\\DevEnv\\DevEnv\\log or /home/user/wincc_proj/DevEnv/DevEnv/log"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npm run build:webview && tsc -p ./",
    "build:webview": "cd webview && npm run build",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "22.x",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/vsce": "^3.7.0",
    "eslint": "^9.36.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@winccoa-tools-pack/npm-shared-library-core": "github:winccoa-tools-pack/npm-shared-library-core"
  }
}
